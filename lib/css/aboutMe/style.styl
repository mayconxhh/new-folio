.AboutMe
	padding 2rem 0
	background-color #f5f7f8
	&__container
		box-sizing border-box
		padding 2rem
		background-color white
		box-shadow 0 0 7px box-shadow
		h2
			font-size 1.5rem
			color color-text
			margin-bottom 1rem
			border-bottom 1px solid #e6e6e6
			padding-bottom .5rem
		.followBtn
			padding .5em 0
			display block
			width 90%
			margin 0 auto
			border 1px solid #1B95E0
			margin 2rem auto
			border-radius 5px
			.avatar
				text-align center
				img
					display inline-block
					border-radius 4px
			.text
				text-align center
				margin 0
				h3
					font-weight 400
					margin-bottom .5rem
					font-size 1.2rem
					color color-text
		.about-image
			width 90%
			max-width 400px
			margin 0 auto
			img
				width 100%
				height auto
		.parrafo
			font-size 1.2rrem
			color color-text
			padding-bottom 1rrem
		a
			text-decoration none
			color #2eaad2
			
@media screen and (min-width 767px)
	.AboutMe
		&__container
			.followBtn
				padding 0
				display flex
				width 430px
				.avatar
					line-height 0
					margin 0
					padding 0
					img
						display inline-block
						border-radius 4px 0 0 4px
				.text
					text-align inherit
					margin .5rem 0 0 1rem
					h3
						margin-bottom 1rem
						font-size 1.5rem
						color color-text
			.about-image
				width 90%
				max-width 400px
				img
					width 100%