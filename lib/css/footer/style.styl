.Footer
	background-color white
	border-top 1px solid  #e6e6e6
	&__container
		padding 1rem 2rem
		box-sizing border-box
	&__top
		&__left, &__right, &__center
			margin-bottom 2rem
			h3
				font-size 1.3rem
				padding-bottom .5rem
				margin-bottom 1rem
				color color-text
				border-bottom 1px solid  #e6e6e6
			p
				margin-bottom .5rem
				font-size 1rem
				color color-text
		&__left
			ul
				padding-top 1rem
				list-style none
				display flex
				justify-content space-around
				flex-wrap wrap
				max-width 300px
				margin 0 auto
				width 80%
				li
					margin 0 .5rem 1rem .5rem
		&__center
			ul
				padding-top .5rem
				margin-left 1rem
				list-style none
				li
					margin-bottom .5rem
					a
						font-size 1rem
						color #2eaad2
		&__right
			p
				a
					font-size 1rem
					color #2eaad2
	&__bottom
		border-top 1px solid #e6e6e6
		padding-top 1rem
		width 100%
		&__first, &__second
			text-align center
			color color-text
			font-size 1rem
			a
				font-size 1rem
				color #2eaad2
				text-decoration none
			span
				font-size 1rem
		&__first
			margin-bottom .5rem
			
@media screen and (min-width 767px)
	.Footer
		&__container
			padding 1rem 0
		&__top
			display flex
			justify-content space-around
			flex-wrap wrap
			&__left, &__center, &__right
				width 30%