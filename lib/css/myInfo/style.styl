.MyInfo
	&__container
		padding 2rem 0
	&__text
		width 90%
		margin 0 auto
		h2
			font-size 1.5rem
			color color-text
			margin-bottom 1rem
		p
			font-size 1.2rem
			color color-text
			a
				font-size 1.2rem
				text-decoration none
				color #2eaad2
	&__avatar
		width 90%
		margin 1em auto
		figure
			margin 0 auto
			width 150px
			line-height 0
			img
				width 100%
				border-radius 50%

@media screen and (min-width 767px)
	.MyInfo
		&__container
			padding 3rem 0
			display flex
		&__text
			h2
				font-size 2.5rem
			p
				font-size 1.3rem
				a
					font-size 1.3rem