.Biografy
	width 100%
	height auto
	background-image url('/images/portafolio/background-header.jpg')
	background-size cover
	background-repeat no-repeat
	background-position center
	padding 3rem 0
	&__image
		width 90%
		margin 0 auto
		margin-bottom 1rem
		figure
			margin 0 auto
			width 200px
			img
				width 100%
				border-radius 50%
				box-shadow 0 0 7px rgba(0, 0, 0, 0.48)
	&__text
		width 90%
		margin 0 auto
		text-align center
		h2, h3
			color white
			text-shadow 0 0 6px rgba(0, 0, 0, 0.53)
		h2
			font-size 1.5rem
			margin-bottom .5rem
			font-family 'Pacifico'
			color #00cc8b
			text-shadow 0 4px 0 #00583c
		h3
			font-size 1rem

@media screen and (min-width 767px)
	.Biografy
		height 100vh
		margin-top -60px
		box-sizing border-box
		display flex
		align-items center
		padding 4rem 0
		&__image
			margin-bottom 1.3rem
		&__text
			h2
				font-size 3rem
				margin-bottom .7rem
			h3
				font-size 1.2rem